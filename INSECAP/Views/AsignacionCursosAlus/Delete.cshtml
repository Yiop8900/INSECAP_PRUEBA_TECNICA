@model INSECAP.Models.AsignacionCursosAlu

@{
    ViewData["Title"] = "Delete";
}

<h1>ELIMINAR</h1>

<h3>¿Esta Seguro que desea eliminar este registro?</h3>
<div>
    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            CODIGO DEL CURSO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoCursoNavigation.CodigoCurso)
        </dd>
        <dt class = "col-sm-2">
            CODIGO DE LA SALA :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoSalaNavigation.CodigoSala)
        </dd>
        <dt class = "col-sm-2">
            ID DEL BIMESTRE :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdBimestreNavigation.IdBimestre)
        </dd>
        <dt class = "col-sm-2">
            RUT DEL ALUMNO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RunAlumnoNavigation.RunAlumno)-@Html.DisplayFor(model => model.RunAlumnoNavigation.DvAlumno)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAsignacion" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Volver al Listado</a>
    </form>

</div>
