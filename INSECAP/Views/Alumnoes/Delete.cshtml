@model INSECAP.Models.Alumno

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Registro</h1>

<h3>Esta Seguro de Eliminar Este Registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            RUT DEL ALUMNO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RunAlumno)-@Html.DisplayFor(model => model.DvAlumno)
        </dd>
        <dt class = "col-sm-2">
            NOMBRE :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            APELLIDO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            FECHA DE NACIMIENTO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            GENERO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
    </dl>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        // Función para mostrar una alerta de éxito
        @if (TempData.ContainsKey("MensajeExito"))
        {
            var mensajeExito = TempData["MensajeExito"] as string;
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Éxito!',
                    text: '@mensajeExito'
                }).then(function () {
                    // Redirige al usuario a la página "Create"
                    window.location.href = '@Url.Action("Index", "Alumnoes")';
                });
            </text>
        }
    </script>
    <form asp-action="Delete">
        
        <input type="hidden" asp-for="RunAlumno" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Volver al Listado</a>
    </form>
</div>
