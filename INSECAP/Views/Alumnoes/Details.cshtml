@model INSECAP.Models.Alumno

@{
    ViewData["Title"] = "Details";
}

<h1>DETALLES DEL ALUMNO</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            RUT DEL ALUMNO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RunAlumno)-@Html.DisplayFor(model => model.DvAlumno)
        </dd>
        <dt class = "col-sm-2">
            NOMBRE DEL ALUMNO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            FECHA DE NACIMIENTO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            GENERO :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RunAlumno" class="btn btn-info">Editar</a> |
    <a asp-action="Index" class="btn btn-dark">Volver al Listado</a>
</div>
