@model IEnumerable<INSECAP.Models.Profesor>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Profesores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar un Profesor</a>
</p>
<p>
    <a class="btn btn-warning" asp-area="" asp-controller="AsignacionCursosProes" asp-action="index">Asignar un Curso</a>
</p>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    // Función para mostrar una alerta de éxito
    @if (TempData.ContainsKey("MensajeExito"))
    {
        var mensajeExito = TempData["MensajeExito"] as string;
        <text>
            Swal.fire({
                icon: 'success',
                title: 'Éxito!',
                text: '@mensajeExito'
            }).then(function () {
                // Redirige al usuario a la página "Create"
                window.location.href = '@Url.Action("Index", "Profesors")';
            });
        </text>
    }
</script>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                RUT DEL PROFESOR
            </th>
            <th>
                NOMBRE COMPLETO
            </th>
            <th>
                OPCIONES
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.RunProfesor)-@Html.DisplayFor(modelItem => item.DvProfesor)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RunProfesor" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.RunProfesor" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.RunProfesor" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
