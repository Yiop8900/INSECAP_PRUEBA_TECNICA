@model INSECAP.Models.Profesor

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar </h1>

<h3>¿Estas seguro de eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            RUT DEL PROFESOR
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RunProfesor)-@Html.DisplayFor(model => model.DvProfesor)
        </dd>
        <dt class = "col-sm-2">
            NOMBRE DEL PROFESOR
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RunProfesor" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Volver al Listado</a>
    </form>
</div>
