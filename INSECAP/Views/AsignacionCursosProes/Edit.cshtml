@model INSECAP.Models.AsignacionCursosPro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Asignacion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

        <script>
            // Función para mostrar una alerta de error
            @if (TempData.ContainsKey("MensajeError"))
            {
                var mensajeError = TempData["MensajeError"] as string;
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: '@mensajeError'
                    });
                </text>
            }

                // Función para mostrar una alerta de éxito
            @if (TempData.ContainsKey("MensajeExito"))
            {
                var mensajeExito = TempData["MensajeExito"] as string;
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Éxito!',
                        text: '@mensajeExito'
                    }).then(function () {
                        // Redirige al usuario a la página "Create"
                        window.location.href = '@Url.Action("Index", "Profesors")';
                    });
                </text>
            }
        </script>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAsignacion" />
            <div class="form-group">
                <label asp-for="CodigoCurso" class="control-label">CODIGO DEL CURSO</label>
                <select asp-for="CodigoCurso" class="form-control" asp-items="ViewBag.CodigoCurso"></select>
                <span asp-validation-for="CodigoCurso" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:6px;">
                <label asp-for="RunProfesor" class="control-label"> RUT DEL PROFESOR</label>
                <select asp-for="RunProfesor" class="form-control" asp-items="ViewBag.RunProfesor"></select>
                <span asp-validation-for="RunProfesor" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:6px;">
                <label asp-for="IdBimestre" class="control-label"> BIMESTRE</label>
                <select asp-for="IdBimestre" class="form-control" asp-items="ViewBag.IdBimestre"></select>
                <span asp-validation-for="IdBimestre" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px;">
                <input type="submit" value="Guardar" class="btn btn-primary" /> | <a asp-action="Index" class="btn btn-dark">Volver al Listado</a>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <img src="~/img/Tabla_Bimestres.png" alt="Alternate Text" class="imagen_guardar_alumno"/>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
