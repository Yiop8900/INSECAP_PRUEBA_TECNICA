@model INSECAP.Models.Curso

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Curso</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            CODIGO DEL CURSO
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoCurso)
        </dd>
        <dt class = "col-sm-2">
            NOMBRE DEL CURSO
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCurso)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodigoCurso" class="btn btn-info">Editar</a> |
    <a asp-action="Index" class="btn btn-dark">Volver al Listado</a>
</div>
